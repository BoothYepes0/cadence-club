<div>
  <div>
    <h1>
      List of all rides
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new ride
    </h2>

    <form action="/insert_ride" method="post">
      <div>
        <label for="distance_km_box">
          Distance km
        </label>

        <input type="text" id="distance_km_box" name="query_distance_km">
      </div>

      <div>
        <label for="time_box">
          Time
        </label>

        <input type="time" id="time_box" name="query_time">
      </div>

      <div>
        <label for="user_id_box">
          User
        </label>

        <input type="text" id="user_id_box" name="query_user_id">
      </div>

      <div>
        <label for="description_box">
          Description
        </label>

        <input type="text" id="description_box" name="query_description">
      </div>

      <div>
        <label for="date_box">
          Date
        </label>

        <input type="date" id="date_box" name="query_date">
      </div>

      <button>
        Create ride
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table>
      <tr>
        <th>
          ID
        </th>

        <th>
          Distance km
        </th>

        <th>
          Time
        </th>

        <th>
          User
        </th>

        <th>
          Description
        </th>

        <th>
          Date
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_rides.each do |a_ride| %>
      <tr>
        <td>
          <%= a_ride.id %>
        </td>

        <td>
          <%= a_ride.distance_km %>
        </td>

        <td>
          <%= a_ride.time %>
        </td>

        <td>
          <%= a_ride.user_id %>
        </td>

        <td>
          <%= a_ride.description %>
        </td>

        <td>
          <%= a_ride.date %>
        </td>

        <td>
          <%= time_ago_in_words(a_ride.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_ride.updated_at) %> ago
        </td>

        <td>
          <a href="/rides/<%= a_ride.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
