<div>
  <div>
    <h1>
      List of all users
    </h1>
  </div>
</div>

<hr>
<hr>
<div class="container">
  <div>
    <table class="table table-sm">
    <thead class="thead-dark">
      <tr>
        <th>
          Name
        </th>

        <th>
          Email
        </th>

        <th>
          Username
        </th>

        <th>
          CCC Member Since
        </th>
        <th>
        </th>

      </tr>

      <% @list_of_users.each do |a_user| %>
      <tr>
        <td>
          <%= a_user.first_name + " " + a_user.last_name %>
        </td>

        <td>
          <%= a_user.email %>
        </td>

        <td>
          <%= a_user.username %>
        </td>

        <td>
          <%= time_ago_in_words(a_user.created_at) %> ago
        </td>
        <td>
          <a href="/users/<%= a_user.id %>">
            Show details
          </a>
        </td>
        
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
