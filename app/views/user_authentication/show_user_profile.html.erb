<div>
  <div>
    <h1>
      Ride #<%= @the_user.id %> details
    </h1>

    <div>
      <div>
        <a href="/users">
          Go back
        </a>
      </div>

    <dl>
      <dt>
        Name
      </dt>
      <dd>
        <%= @the_user.first_name + " " + @the_user.last_name  %>
      </dd>

      <dt>
        Username
      </dt>
      <dd>
        <%= @the_user.username %>
      </dd>

      <dt>
        Email
      </dt>
      <dd>
        <%= @the_user.email %>
      </dd>

      <dt>
        Member Since
      </dt>
      <dd>
        <%= @the_user.created_at %>
      </dd>

    </dl>
  </div>
</div>
